doctype html
html
	head
		title GxServer 0.1
		link(rel="stylesheet/less", type="text/css", href="styles.less")
		script(src="less-1.2.1.min.js", type="text/javascript")
		script(src="/jquery-1.7.1.min.js", type="text/javascript")
		script(src="/socket.io/socket.io.js", type="text/javascript")
		script(src="/socket.io/socket.io-sessions.js", type="text/javascript")
		script(src="chat.js", type="text/javascript")
			
	body
		h1 Hello, #{user}
		div#chatbox
		form
			input#message(type="text")
			div.button#submit Send
		div.button#join-game Join game
		div.button#quit-game Quit game
		div.button#bet-game Bet!
		div#ladder